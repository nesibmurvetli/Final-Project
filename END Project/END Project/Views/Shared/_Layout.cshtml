<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Restoran</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="~/assets/images/favicon.ico" />
</head>
<body>
    <div class="container-scroller" style="background-image:url(../assets/images/3.jpg)">
        <!-- partial:partials/_navbar.html -->
        <nav class="navbar default-layout-navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row" @*style="background-image:url(../assets/images/3.jpg)"*@>
            <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
                <a class="navbar-brand brand-logo" asp-controller="Dashboard" asp-action="Index"><img src="~/assets/images/1.svg" alt="logo" /></a>
                <a class="navbar-brand brand-logo-mini" href="index.html"><img src="~/assets/images/logo-mini.svg" alt="logo" /></a>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-stretch">
                <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                    <span class="mdi mdi-menu"></span>
                </button>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                    <span class="mdi mdi-menu"></span>
                </button>
            </div>
            
        </nav>
       
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:partials/_sidebar.html -->
            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">
                    <li class="nav-item nav-profile">
                        <a href="#" class="nav-link">
                            <div class="nav-profile-image">
                                <img src="~/assets/images/11.jpg" alt="profile">
                                <span class="login-status online"></span>
                                <!--change to offline or busy as needed-->
                            </div>
                            <div class="nav-profile-text d-flex flex-column">
                                <span class="font-weight-bold mb-2">Nəsib Mürvətli</span>
                                <span class="text-secondary text-small">Layihə meneceri</span>
                            </div>
                            <i class="mdi mdi-bookmark-check text-success nav-profile-badge"></i>
                        </a>
                    </li>
                    <li>
                        <div class="d-flex justify-content-center">
                            <a asp-controller="Account" asp-action="Login" class="mdi mdi-export"  style="margin-right:10px; color:blue !important"> Cixis</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                            <span class="menu-title">Əsas Səhifə</span>
                            <i class="mdi mdi-home menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="MainMenu" asp-action="Index">
                            <span class="menu-title">Əsas Menyu</span>
                            <i class="mdi mdi-book-open-page-variant menu-icon"></i>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="ExtraMenu" asp-action="Index">
                            <span class="menu-title">İçkilər və Qəlyanaltılar</span>
                            <i class="mdi mdi-food menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Position" asp-action="Index">
                            <span class="menu-title">Vəzifələr</span>
                            <i class="mdi mdi mdi-briefcase menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Employees" asp-action="Index">
                            <span class="menu-title">İşçilər</span>
                            <i class="mdi mdi-worker menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Income" asp-action="Index">
                            <span class="menu-title">Gəlirlər</span>
                            <i class="mdi mdi-square-inc-cash menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Expenditure" asp-action="Index">
                            <span class="menu-title">Xərclər</span>
                            <i class="mdi mdi-cash-usd menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Wages" asp-action="Index">
                            <span class="menu-title">Ödənilən Maaşlar</span>
                            <i class="mdi mdi-cash-multiple  menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Users" asp-action="Index">
                            <span class="menu-title">İstifadəçilər</span>
                            <i class="mdi mdi-account-multiple menu-icon"></i>
                        </a>
                    </li>
                    @*<li class="nav-item">
                        <a class="nav-link" asp-controller="Cash" asp-action="Index">
                            <span class="menu-title">Balans</span>
                            <i class="mdi mdi-account-multiple menu-icon"></i>
                        </a>
                    </li>*@

                    @*<li class="nav-item">
                        <a class="nav-link" asp-controller="Addresses" asp-action="Index">
                            <span class="menu-title">Ünvanlar</span>
                            <i class="mdi mdi-google-maps menu-icon"></i>
                        </a>
                    </li>*@
                </ul>
            </nav>
            @RenderBody()
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="~/assets/vendors/chart.js/Chart.min.js"></script>
    <script src="~/assets/js/jquery.cookie.js" type="text/javascript"></script>
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/assets/js/off-canvas.js"></script>
    <script src="~/assets/js/hoverable-collapse.js"></script>
    <script src="~/assets/js/misc.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="~/assets/js/dashboard.js"></script>
    <script src="~/assets/js/todolist.js"></script>
    <!-- End custom js for this page -->
    @RenderSection("Scripts", false)
    @RenderSection("css", false)
</body>
</html>